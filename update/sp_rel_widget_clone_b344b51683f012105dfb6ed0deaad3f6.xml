	var single_currency_code = '';
	
	if (single_currency) 
		single_currency_code = gs.getProperty('glide.i18n.single_currency.code') || '';
	
	var csym = {};
	csym.usd = {symbol: "$", location: "prefix"};
	csym.cad = {symbol: "$", location: "prefix"};
	csym.mxn = {symbol: "$", location: "prefix"};
	csym.eur = {symbol: "€", location: "prefix"};
	csym.gbp = {symbol: "£", location: "prefix"};
	
	var locale = GlideLocale.get();
	var cc = '';
	if (single_currency_code != '')
		cc = data.symbol = single_currency_code;
	else
		cc = data.symbol = locale.getCurrencyCode();
	
	cc = cc.toLowerCase();
	data.cc = cc;
	locale.getCurrencyCode();
	if (csym[cc]) 
		data.symbol = csym[cc].symbol;
})();]]&gt;&lt;/script&gt;&lt;servicenow&gt;true&lt;/servicenow&gt;&lt;sys_class_name&gt;sp_widget&lt;/sys_class_name&gt;&lt;sys_created_by&gt;admin&lt;/sys_created_by&gt;&lt;sys_created_on&gt;2016-02-08 19:07:20&lt;/sys_created_on&gt;&lt;sys_id&gt;e81a1f4047211200ba13a5554ee490fc&lt;/sys_id&gt;&lt;sys_mod_count&gt;45&lt;/sys_mod_count&gt;&lt;sys_name&gt;Variable Currency&lt;/sys_name&gt;&lt;sys_package display_value="Service Portal - Core" source="com.glide.service-portal"&gt;bf9501778dc20210d0ad51af41866327&lt;/sys_package&gt;&lt;sys_policy/&gt;&lt;sys_scope display_value="Global"&gt;global&lt;/sys_scope&gt;&lt;sys_update_name&gt;sp_widget_e81a1f4047211200ba13a5554ee490fc&lt;/sys_update_name&gt;&lt;sys_updated_by&gt;admin&lt;/sys_updated_by&gt;&lt;sys_updated_on&gt;2021-08-26 15:13:45&lt;/sys_updated_on&gt;&lt;template&gt;&lt;![CDATA[&lt;div class="row"&gt;
